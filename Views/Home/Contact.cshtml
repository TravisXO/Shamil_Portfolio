<!-- SECTION 3: CONTACT FORM -->
<section id="transmission" class="stack-card" data-title="TRANSMISSION">
    <div class="content-card form-wrapper">
        <div class="terminal-window">
            <div class="terminal-header">
                <div class="traffic-lights">
                    <span class="light red"></span>
                    <span class="light yellow"></span>
                    <span class="light green"></span>
                </div>
                <div class="terminal-title">
                    <i class="fa-solid fa-terminal"></i> SECURE_MSG_PROTOCOL.EXE
                </div>
            </div>

            <div class="terminal-body">
                <form id="matrixContactForm" class="matrix-form">

                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">> ENTER_NAME:</label>
                            <input type="text" id="name" name="name" required placeholder="_" autocomplete="off">
                            <span class="input-border"></span>
                        </div>
                        <div class="form-group">
                            <label for="email">> ENTER_EMAIL:</label>
                            <input type="email" id="email" name="email" required placeholder="_" autocomplete="off">
                            <span class="input-border"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="subject">> SELECT_INQUIRY_TYPE:</label>
                        <div class="select-wrapper">
                            <select id="subject" name="subject" required>
                                <option value="" disabled selected>Select Protocol...</option>
                                <option value="Project Quote">REQUEST_PROJECT_QUOTE</option>
                                <option value="Collaboration">COLLABORATION_PROPOSAL</option>
                                <option value="Job Opportunity">RECRUITMENT_OPPORTUNITY</option>
                                <option value="General">GENERAL_COMMUNICATION</option>
                            </select>
                            <span class="select-arrow">▼</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="message">> COMPOSE_MESSAGE:</label>
                        <textarea id="message" name="message" rows="5" required placeholder="Type your message stream here..."></textarea>
                        <span class="input-border"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="transmit-btn">
                            <span class="btn-text">[ TRANSMIT_MESSAGE ]</span>
                            <div class="btn-glitch"></div>
                        </button>
                        <div id="formStatus" class="form-status"></div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

<!-- SECTION 5: LOCATION MAP -->
<section id="geolocation" class="stack-card" data-title="GEOLOCATION">
    <div class="content-card map-wrapper">
        <div class="section-header-matrix">
            <span class="header-tag">/// <i class="fa-solid fa-map-location-dot"></i> PHYSICAL_COORDINATES: LUSAKA_HQ</span>
            <div class="header-line"></div>
        </div>

        <div class="map-container">
            <div class="map-overlay"></div>
            <div class="map-grid-overlay"></div>
            <!-- Embedded Google Map for Lusaka, Zambia -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d123102.36448378523!2d28.21635397551065!3d-15.416627685607304!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1940f36803657373%3A0xc47dfc27e9973278!2sLusaka%2C%20Zambia!5e0!3m2!1sen!2szm!4v1707830000000!5m2!1sen!2szm"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
